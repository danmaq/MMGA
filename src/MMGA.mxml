<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:assets="assets.*"
			   xmlns:nineball.flex="danmaq.nineball.flex.components.*"
			   width="100%" height="100%"
			   minWidth="240" minHeight="400"
			   backgroundColor="0x333333"
			   frameRate="60" pageTitle="MMGA"
			   usePreloader="true" preloader="danmaq.nineball.flex.components.CForcePreloader"
			   viewSourceURL="srcview/index.html" xmlns:components="danmaq.mmga.components.*">

	<fx:Declarations>
		<!-- 非ビジュアルエレメント (サービス、値オブジェクトなど) をここに配置 -->
	</fx:Declarations>

	<!--- ダンスフロアの拡大率調整のためのラッパー。 -->
	<nineball.flex:CFlexibleContainer top="0" width="100%" height="75%"
			 horizontalCenter="0" minWidth="240" minHeight="300">
		<!--- ここがメイン。 -->
		<components:CDanceStage left="0" top="0" width="240" height="300" debug="true"/>
	</nineball.flex:CFlexibleContainer>

	<!--- コントローラ類。 -->
	<nineball.flex:CFlexibleContainer bottom="0" width="100%" height="29%" 
									  horizontalCenter="0" minWidth="240" minHeight="116">
		<s:VGroup bottom="0" width="100%" height="100%" gap="0" horizontalAlign="center"
				  horizontalCenter="0" verticalAlign="bottom">
			<s:HGroup width="100%" height="65%" horizontalAlign="center" paddingLeft="0"
					  verticalAlign="middle">
				<s:Button width="33%" height="100%" label="Sure!" fontSize="16"/>
				<s:Button width="33%" height="100%" label="Umm..." fontSize="16"/>
				<s:Button width="33%" height="100%" label="No!" fontSize="16"/>
			</s:HGroup>
			<!--- MMGAロゴ。 -->
			<assets:logo width="100%" height="35%" minWidth="240" minHeight="40"/>
		</s:VGroup>
	</nineball.flex:CFlexibleContainer>
</s:Application>
